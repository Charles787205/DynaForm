<div class="input-block" draggable="true" id="<%= query.id %>">
  <div class="block-container">
    <div class="h-8 justify-start items-center gap-2.5 inline-flex">
      <div
        data-name="field_name<%= query.id %>"
        data-type="checkbox"
        class="ml-4 h-4 w-4 border border-gray-500"
      ></div>
      <div
        contenteditable="true"
        show-pl-click="true"
        placeholder="Checkbox"
        <% query.checked ? "checked" : "" %>
        class="content-container text-neutral-600 text-md outline-none font-extralight min-w-28 max-w-80"
      ><%= query.content %></div>
      <button
        class="option"
        type="button"
        hx-get="/components/fields/checkbox"
        hx-trigger="click <%= query.labelled %>"
        hx-target="closest .input-block"
        hx-vals='{"id": "<%= query.id %>"}'
        hx-swap="afterend"
        onclick="handleClick(this)"
        tabindex="-1"
      >
        Add option
      </button>
      <% if (query.labelled === 'true') { %>
        <div   
        hx-get="/components/fields/label"
        hx-trigger="load"
        hx-target="closest .input-block"
        hx-vals='{"id": "<%= query.id %>", "content": "<%= query.text %>"}'
        hx-swap="beforebegin"
        ></div>
      <% } %>
      <div
      hx-get="components/tooltip"
      hx-swap="outerHTML"
      hx-trigger="load"
    ></div>
      </div>
    </div>

    <div class="move-dropzone" data-position="left"></div>
    <div class="move-dropzone" data-position="right"></div>
    <div class="move-dropzone" data-position="below"></div>
    <div class="move-dropzone" data-position="top"></div>
  </div>
</div>
