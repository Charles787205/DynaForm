<div class="flex flex-col gap-3 relative">
	<div class="load-indicator absolute h-screen w-screen bg-white flex justify-center items-center" id="spinner"><img src="/assets/1490.gif" class="object-contain" /></div>

	<% if (forms && forms.length > 0) { %> <% forms.forEach(function(item) { %>
	<div
		hx-post="components/formCard"
		hx-trigger="load"
		hx-indicator="#spinner"
		hx-swap="outerHTML"
		hx-vals='js:{"name": "<%= item.name %>","date": "<%= item.date %>","id": "<%= item.id %>"}'
	></div>
	<% }); %> <% } else { %>
	<p class="text-lg">No forms available.</p>
	<% } %>
</div>
