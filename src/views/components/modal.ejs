<!-- This symbol (<%- %>) - rendered the ejs file in html format  -->
<!-- include keyword requires a filename option or file directory -->

<!-- Modal Overlay -->
<div
	class="fixed inset-0 bg-gray-800 bg-opacity-75 z-40"
	aria-hidden="true"
></div>

<!-- Modal -->
<div
	class="fixed inset-0 bg-gray-800 bg-opacity-75 flex items-center justify-center z-50"
>
	<div class="bg-white rounded-lg shadow-lg w-1/2 border border-blue-500">
		<!-- Modal header -->
		<div
			class="px-4 py-2 border-b border-gray-300 flex justify-between items-center"
		>
			<!-- Title  -->
			<h2 class="text-lg font-semibold">Component</h2>
			<!-- close mark -->
			<button class="text-gray-600 hover:text-gray-900">&times;</button>
		</div>

		<!-- Modal Body -->
		<div class="p-5 flex">
			<!-- Component List -->
			<div
				class="border-2 border-black flex flex-col gap-3 p-y w-64 max-h-[400px] overflow-auto"
			>
				<!-- Text -->
				<%- include('./modal/text.components.ejs') %>

				<!-- Input -->
				<%- include('./modal/input.components.ejs') %>
			</div>

			<!-- Preview -->
			<div class="border-2 border-blue-500 w-full grid grid-rows-2">
				<div id="preview" class="border-2 border-black"></div>
				<div id="example"><%- include('./modal/example.ejs') %></div>
			</div>
		</div>

		<hr />

		<!-- Modal Footer -->
		<div class="m-3 flex justify-end">
			<!-- Insert Button -->
			<button
				type="button"
				class="text-white bg-gray-800 hover:bg-gray-900 focus:outline-none focus:ring-4 focus:ring-gray-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-gray-800 dark:hover:bg-gray-700 dark:focus:ring-gray-700 dark:border-gray-700"
			>
				Insert
			</button>
		</div>
	</div>
</div>
